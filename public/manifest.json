{
    "manifest_version": 3,
    "name": "Found Graph",
    "version": "0.0.1",
    "description": "A personal knowledge graph extension.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Open Found Graph"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}